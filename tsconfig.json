{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@spectrajs/core": ["packages/core/src"],
      "@spectrajs/node": ["packages/node/src"]
    }
  },
  "include": ["packages", "examples"]
}
