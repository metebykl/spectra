{
  "name": "@spectrajs/core",
  "version": "0.4.0",
  "description": "Fast, lightweight and fully typesafe web framework",
  "main": "./dist/index.cjs",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./middleware": {
      "types": "./dist/middleware/index.d.ts",
      "import": "./dist/middleware/index.js",
      "require": "./dist/middleware/index.cjs"
    },
    "./adapter/node": {
      "types": "./dist/adapter/node/index.d.ts",
      "import": "./dist/adapter/node/index.js",
      "require": "./dist/adapter/node/index.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "middleware": [
        "./dist/middleware/index.d.ts"
      ],
      "adapter/node": [
        "./dist/adapter/node/index.d.ts"
      ]
    }
  },
  "scripts": {
    "test": "tsc --noEmit && vitest run",
    "test:watch": "vitest watch",
    "format": "prettier --check \"src/**/*.ts\" \"examples/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\" \"examples/**/*.ts\"",
    "build": "tsup",
    "prerelease": "npm run test && npm run build",
    "release": "np",
    "example:node": "tsx ./examples/node.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metebykl/spectra.git"
  },
  "keywords": [
    "web",
    "http",
    "framework",
    "router"
  ],
  "author": "metebykl",
  "license": "MIT",
  "homepage": "https://github.com/metebykl/spectra#readme",
  "devDependencies": {
    "@types/node": "^22.7.9",
    "np": "^10.0.7",
    "prettier": "^3.3.3",
    "tsup": "^8.3.5",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  }
}
